+++ b/modules/berkeley-db/bdb.c
@@ -351,40 +351,10 @@
 DEFUN(BDB:DBE-CREATE,&key PASSWORD ENCRYPT :HOST CLIENT-TIMEOUT SERVER-TIMEOUT)
 { /* Create an environment handle */
   DB_ENV *dbe, *dbe_cl;
-  bool remote_p = boundp(STACK_2); /* host ==> remote */
